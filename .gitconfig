[user]
  name = Max Belsky
  email = public.belsky@gmail.com
[alias]
  br = branch
  ci = commit
  co = checkout
  conflicts = diff --name-only --diff-filter=U
  cp = cherry-pick
  lbr = branch --format='%(if)%(HEAD)%(then)* %(else)  %(end)%(color:green)%(refname:short)%(color:reset) %(subject)'
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset' --abbrev-commit
  men = merge --no-ff
  rb = rebase
  st = status
  please = push --force-with-lease
  prom = pull --rebase origin master
  upush = push -u origin HEAD
  undo = reset --soft HEAD~
[color]
  ui = true
[diff]
  tool = opendiff
[push]
  default = simple

[core]
  editor = /usr/bin/vim
